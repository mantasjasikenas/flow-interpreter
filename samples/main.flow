fun testForCycle() {
    println("For cycle:");

    var start: Int = 5;
    val end: Int = 10;

    for(a in start..end){
        println(a);
    }
}

fun testWhileCycle(i : Int, n : Int) {
    println("While cycle:");

    while (i <= n) {
        println(i);
        i = i + 1;
    }
}

testForCycle();
println();
testWhileCycle(0, 15);


println("Program exited.");





